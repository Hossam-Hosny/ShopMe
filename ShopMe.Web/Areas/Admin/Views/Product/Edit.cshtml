@model ProductViewModel

@{
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "Edit Product";
    Layout = "~/Views/Shared/_dashboard.cshtml";
}


@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Product.Id" />
            <input type="hidden" asp-for="Product.ImagePath" />

            <div class="form-groub">
                <label asp-for="Product.Name"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
                <span asp-validation-for="Product.Name" class="text-danger"></span>

            </div>


            <div class="form-groub">
                <label asp-for="Product.Description"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>

            </div>
            <div class="form-groub">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>

            <div class="form-groub">
                <label asp-for="Product.ImagePath" class="control-label"></label>
                <input type="file" name="file" id="imgfile" class="form-control" />

            </div>


            <div class="form-groub">
                <label asp-for="Product.CategoryId" class="control-label"></label>
                <select asp-for="Product.CategoryId" asp-items="Model.CategoryList" class="form-control">
                    <option disabled selected>-- Select Category --</option>
                </select>


            </div>


            <div class="form-groub">
                <input type="submit" value="Save" class="btn btn-success />
                <a asp-action="Index" class="btn btn-warning">Back To List</a>

            </div>


        </form>

    </div>
    <div class="col-md-4">
        <div class="container">
            <img src="@Model.Product.ImagePath" />
        </div>
    </div>
</div>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}