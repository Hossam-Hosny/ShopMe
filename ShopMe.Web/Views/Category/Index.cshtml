@model IEnumerable<Category>

@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "View Categories";
    Layout = "~/Views/Shared/_dashboard.cshtml";
}

<div>
    <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create</a>

</div>
<br />
<table class="table table-hover" width="100%">
    <tr>
        <td>Name</td>
        <td>Description</td>
        <td>Created At </td>
        <td>Actions</td>
    </tr>
    @foreach(Category Category in Model)
    {  
        <tr>
            <td>@Category.Name</td>
            <td>@Category.Description</td>
            <td>@Category.CreatedAt</td>
            <td>
                <a href="/Category/Edit/@Category.Id" class="btn btn-success" >Edit</a>
                <a href="/Category/Delete/@Category.Id" class="btn btn-danger" >Delete</a>
            </td>
        </tr>
    }
</table>